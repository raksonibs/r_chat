extends layout

block content
  .container.separate-room.portfolio-modal(data-name="#{room}")
    .row
      .col-lg-8.col-lg-offset-2
        .modal-body.text-center
          h2= room
          hr
          img.img-responsive.img-centered(src='/images/portfolio/submarine.png', alt='')
          p
            | Need to describe room description via post data
          p.chat-room-specifics
          button.get-messages Get Messages
          div.oldmessages
          div.messages
          div.reddit-content
          div.room-name.room-name.hidden(data-value='#{room}')= room
          if user
            div.clear
            form#messageForm
              textarea(rows="4", cols="50", placeholder="What do you think?", maxlength=200).outgoingMessage
              input(type="hidden" value="#{user.name}").userField
              input(type="hidden" value="#{user.image}").userImage
              input(type="button", value="Submit").send.send-room-page
          else
            p Sign in with your reddit account to join in on the conversation
          ul.list-inline.item-details
            li
              | Room Link:
              strong
                a(href='www.google.com') Room Link

